<div class="main posts-show">
    <div class="container">
        <img class="img-fluid" src="/pc.png">
        <div class="posts-show-item">
            <div class="post-menus">
                <% @walls.each do |wall|%>
                <div class="posts-index-item">
                    <% if wall.sender == @current_user %>
                    <div class="reply">
                        <h6>
                            <%=wall.message ^ @key  %>
                        </h6>
                    </div>
                    <% else %>
                    <h6>
                        <%=wall.message ^ @key %>
                    </h6>
                    <% end %>
                </div>
                <% end%>
                <div class="form">
                    <div class="form-body">
                        <%= form_tag("/walls/#{params[:id]}/update") do %>
                        <p>reply</p>
                        <textarea name="message" required="true"></textarea>
                        <p></p>
                        <input type="submit" value="send">
                    </div>
                </div>
                <%end%>
            </div>
        </div>
    </div>
</div>